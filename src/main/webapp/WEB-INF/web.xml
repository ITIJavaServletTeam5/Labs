<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>Labs System ITI project</display-name>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!--Servlets-->

    <!--Admin-->
    <!--Trainee_Of_Admin-->
    <servlet>
        <servlet-name>admin.controller.Trainee</servlet-name>
        <servlet-class>admin.controller.TraineeListView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin.controller.Trainee</servlet-name>
        <url-pattern>/admin/view/Trainee</url-pattern>
    </servlet-mapping>

    <!--Group_of_Admin-->
    <servlet>
        <servlet-name>admin.controller.Group</servlet-name>
        <servlet-class>admin.controller.GroupListView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin.controller.Group</servlet-name>
        <url-pattern>/admin/view/Group</url-pattern>
    </servlet-mapping>
    
    <!--Course_of_Admin-->
    <servlet>
        <servlet-name>admin.controller.Course</servlet-name>
        <servlet-class>admin.controller.CourseListView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin.controller.Course</servlet-name>
        <url-pattern>/admin/view/Course</url-pattern>
    </servlet-mapping>
    
    <!--Lab_of_Admin-->
    <servlet>
        <servlet-name>admin.controller.Lab</servlet-name>
        <servlet-class>admin.controller.LabListView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin.controller.Lab</servlet-name>
        <url-pattern>/admin/view/Lab</url-pattern>
    </servlet-mapping>
    
    <!--Assignments_Staff-->
    <servlet>
        <servlet-name>instructor.controller.Assignments</servlet-name>
        <servlet-class>instructor.controller.AssignmentsDownload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>instructor.controller.Assignments</servlet-name>
        <url-pattern>/instructor/view/Assignments</url-pattern>
    </servlet-mapping>
    
    <!--Queues_Staff-->
    <servlet>
        <servlet-name>instructor.controller.QueuesList</servlet-name>
        <servlet-class>instructor.controller.QueuesList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>instructor.controller.QueuesList</servlet-name>
        <url-pattern>/instructor/view/QueuesList</url-pattern>
    </servlet-mapping>


    <!--Common-->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>common.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>


    <!--Filters-->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>common.controller.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--Welcome-->
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
</web-app>
